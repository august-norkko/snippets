<%- include ../partials/head ;%>
<div class="pt-5">
  <h2 class="text-black">Create an account</h2>
</div>
<div class="d-flex flex-row justify-content-center align-items-center pt-5">
    <form class="w-20" action="" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
          <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="<%if(forms != undefined){%><%= forms[0]%><%}%>" autocomplete="off">
        </div>
        <div class="form-group pt-1">
          <input type="email" class="form-control" id="text" name="email" placeholder="email@example.com" value="<%if(forms != undefined){%><%= forms[1]%><%}%>" autocomplete="off">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%if(forms != undefined){%><%= forms[2]%><%}%>" autocomplete="off">
          </div>
          <div class="form-group col-md-6">
            <input type="password" class="form-control" id="passwordconfirm" name="passwordconfirm" placeholder="Password confirm" value="<%if(forms != undefined){%><%= forms[3]%><%}%>" autocomplete="off">
          </div>
        </div>
        <button class="btn btn-info btn-block quicksand" type="submit">REGISTER</button>
    </form>
</div>
