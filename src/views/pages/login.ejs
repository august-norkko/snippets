<%- include ../partials/head ;%>
<div class="pt-5">
  <h2 class="text-black">Login</h2>
</div>
<div class="d-flex flex-row justify-content-center align-items-center pt-5">
    <form class="w-20" action="" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
          <input type="text" class="form-control" id="inputusername" name="username" placeholder="Username" autocomplete="off">
        </div>
        <div class="form-group pt-1">
          <input type="password" class="form-control" id="inputpassword" name="password" placeholder="Password" autocomplete="off" >
        </div>
        <button class="btn btn-info btn-block quicksand" type="submit">SIGN IN</button>
        <p class="m-3 text-black">Not a member?
          <a href="/register">Register</a>
        </p>
    </form>
</div>